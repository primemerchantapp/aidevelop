{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./temp/tsbuildinfo",
    "paths": {
      // Use local sources when demo and test pages import @stackblitz/sdk
      "@stackblitz/sdk": ["./src/index.ts"],
      "$src/*": ["./src/*"],
      "$test/*": ["./test/*"]
    }
  },
  "include": ["./examples", "./src", "./test"]
}
